@model dynamic
@{
    var title = Model?.title ?? "Testimonials";
    var items = Model?.items as System.Collections.IEnumerable ?? new List<dynamic>();
}

<section class="py-12">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center">@title</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var testimonial in items)
            {
                <div class="bg-white rounded-lg shadow-md p-6">
                    @if (!string.IsNullOrEmpty(testimonial.quote))
                    {
                        <p class="text-gray-700 mb-4 italic">"@testimonial.quote"</p>
                    }
                    <div class="flex items-center">
                        @if (!string.IsNullOrEmpty(testimonial.avatar))
                        {
                            <img src="@testimonial.avatar" alt="@(testimonial.name ?? "")" class="w-12 h-12 rounded-full mr-4" />
                        }
                        <div>
                            @if (!string.IsNullOrEmpty(testimonial.name))
                            {
                                <p class="font-bold">@testimonial.name</p>
                            }
                            @if (!string.IsNullOrEmpty(testimonial.role))
                            {
                                <p class="text-sm text-gray-500">@testimonial.role</p>
                            }
                            @if (testimonial.rating != null)
                            {
                                <div class="flex text-yellow-400 mt-1">
                                    @for (int i = 0; i < testimonial.rating; i++)
                                    {
                                        <span>â˜…</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

