@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@(ViewData["Title"] ?? "Untitled")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/output.css" />
</head>
<body class="min-h-screen bg-gray-100 text-gray-900 flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="text-xl font-bold">@(ViewData["SiteName"] ?? "My Site")</div>
            <nav class="space-x-4">
                <a href="/hotels" class="text-gray-700 hover:text-black">Hotels</a>
                <a href="/" class="text-gray-700 hover:text-black">Home</a>
            </nav>
        </div>
    </header>

    <!-- Holy Grail Layout -->
    <div class="flex flex-1">
        <!-- Left Sidebar -->
        <aside class="hidden lg:block w-64 bg-white shadow-sm p-6">
            @if (ViewData["SidebarContent"] != null)
            {
                @Html.Raw(ViewData["SidebarContent"])
            }
            else
            {
                <h3 class="font-bold mb-4">Navigation</h3>
                <nav class="space-y-2">
                    <a href="/hotels" class="block text-gray-700 hover:text-black">Hotels</a>
                    <a href="/" class="block text-gray-700 hover:text-black">Home</a>
                </nav>
            }
        </aside>

        <!-- Main Content -->
        <main class="flex-1 container mx-auto px-4 py-8">
            @RenderBody()
        </main>

        <!-- Right Sidebar -->
        <aside class="hidden xl:block w-64 bg-white shadow-sm p-6">
            @if (ViewData["RightSidebarContent"] != null)
            {
                @Html.Raw(ViewData["RightSidebarContent"])
            }
            else
            {
                <h3 class="font-bold mb-4">Quick Links</h3>
                <nav class="space-y-2">
                    <a href="/hotels" class="block text-gray-700 hover:text-black">View All Hotels</a>
                </nav>
            }
        </aside>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white text-center py-4">
        &copy; @DateTime.Now.Year @(ViewData["SiteName"] ?? "My Site")
    </footer>
</body>
</html>

