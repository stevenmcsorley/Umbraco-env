@model dynamic
@{
    var title = Model?.title ?? "";
    var items = Model?.items as System.Collections.IEnumerable ?? new List<dynamic>();
    var columns = Model?.columns ?? 3;
    var gridClass = columns == 2 ? "md:grid-cols-2" : columns == 4 ? "md:grid-cols-2 lg:grid-cols-4" : "md:grid-cols-2 lg:grid-cols-3";
}

@if (!string.IsNullOrEmpty(title))
{
    <h2 class="text-3xl font-bold mb-8 text-center">@title</h2>
}

<div class="grid grid-cols-1 @gridClass gap-6">
    @foreach (var item in items)
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            @if (!string.IsNullOrEmpty(item.image))
            {
                <img src="@item.image" alt="@(item.title ?? "")" class="w-full h-48 object-cover" />
            }
            <div class="p-6">
                @if (!string.IsNullOrEmpty(item.title))
                {
                    <h3 class="text-xl font-bold mb-2">@item.title</h3>
                }
                @if (!string.IsNullOrEmpty(item.description))
                {
                    <p class="text-gray-600 mb-4">@item.description</p>
                }
                @if (!string.IsNullOrEmpty(item.link))
                {
                    <a href="@item.link" class="text-blue-600 hover:underline font-semibold">Learn More â†’</a>
                }
            </div>
        </div>
    }
</div>

