@model dynamic
@{
    var heading = Model?.heading ?? "Ready to Get Started?";
    var text = Model?.text ?? "";
    var buttonText = Model?.buttonText ?? "Get Started";
    var buttonLink = Model?.buttonLink ?? "#";
    var backgroundColor = Model?.backgroundColor ?? "bg-blue-600";
    var textColor = Model?.textColor ?? "text-white";
}

<section class="@backgroundColor @textColor py-16">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-4">@heading</h2>
        @if (!string.IsNullOrEmpty(text))
        {
            <p class="text-xl mb-8 opacity-90">@text</p>
        }
        <a href="@buttonLink" class="inline-block px-8 py-4 bg-white text-blue-600 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors shadow-lg">
            @buttonText
        </a>
    </div>
</section>

