@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    string heading = ViewData["HeroHeading"]?.ToString() ?? "";
    string tagline = ViewData["HeroTagline"]?.ToString() ?? "";
    string image = ViewData["HeroImage"]?.ToString() ?? "";
    string backgroundColor = ViewData["HeroBackgroundColor"]?.ToString() ?? "bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-800";
    string textColor = ViewData["HeroTextColor"]?.ToString() ?? "text-white";
    string buttonText = ViewData["HeroButtonText"]?.ToString() ?? "Explore Hotels";
    string buttonLink = ViewData["HeroButtonLink"]?.ToString() ?? "/hotels";
}

<section class="relative overflow-hidden bg-gray-900">
    @if (!string.IsNullOrEmpty(image))
    {
        <div class="absolute inset-0 z-0">
            <img src="@image" alt="@heading" class="w-full h-full object-cover opacity-40" />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>
    }
    else
    {
        <div class="absolute inset-0 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900"></div>
    }
    <div class="max-w-7xl mx-auto px-6 lg:px-12 py-32 lg:py-40 relative z-10">
        <div class="max-w-3xl">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-serif text-white mb-6 leading-[1.1] tracking-tight">
                @heading
            </h1>
            @if (!string.IsNullOrEmpty(tagline))
            {
                <p class="text-lg md:text-xl text-gray-300 mb-10 leading-relaxed font-light max-w-2xl">@tagline</p>
            }
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="@buttonLink" class="bg-white text-gray-900 px-10 py-3.5 text-sm font-light tracking-widest uppercase hover:bg-gray-100 transition-colors inline-block text-center">
                    @buttonText
                </a>
                <a href="/hotels" class="bg-transparent border border-white/30 text-white px-10 py-3.5 text-sm font-light tracking-widest uppercase hover:bg-white/10 transition-colors inline-block text-center">
                    View All Hotels
                </a>
            </div>
        </div>
    </div>
</section>

